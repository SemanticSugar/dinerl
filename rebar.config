{erl_opts,
 [warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warnings_as_errors,
  debug_info]}.

{deps, [{lhttpc, "1.3.1", {pkg, nextroll_lhttpc}}, {erliam, "0.4.0"}]}.

{cover_enabled, true}.

{cover_opts, [verbose]}.

{project_plugins,
 [{rebar3_format, "~> 1.0.1"}, {rebar3_lint, "~> 0.4.1"}, {rebar3_hank, "~> 1.1.3"}]}.

{dialyzer,
 [{warnings, [unknown, no_return, error_handling]},
  {get_warnings, true},
  {plt_apps, top_level_deps},
  {plt_extra_apps, []},
  {plt_location, local},
  {base_plt_apps, [erts, stdlib, kernel]},
  {base_plt_location, global}]}.

{xref_checks, [undefined_function_calls, locals_not_used, deprecated_function_calls]}.

{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.

{alias, [{test, [format, lint, hank, xref, dialyzer, eunit, cover]}]}.
