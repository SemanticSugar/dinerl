%% -*- erlang -*-
{erl_opts, [
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars,
    debug_info
]}.

{deps, [
    {lhttpc, {git,"git://github.com/ferd/lhttpc.git", {tag, "1.2.9"}}},
    {erliam, "0.3.1"}
]}.

{cover_enabled, true}.

{plugins, [rebar3_lint, {rebar3_format, "~> 0.8.1"}]}.

{dialyzer, [
    {warnings, [unknown, no_return, error_handling]},
    {get_warnings, true},
    {plt_apps, top_level_deps},
    {plt_extra_apps, []},
    {plt_location, local},
    {base_plt_apps, [erts, stdlib, kernel, sasl]},
    {base_plt_location, global}
]}.

{xref_checks, [
    undefined_function_calls,
    locals_not_used,
    deprecated_function_calls
]}.

{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.

{format, [{files, ["src/*.erl", "include/*.hrl"]}]}.

{alias, [{test, [format, xref, dialyzer, eunit, cover]}]}.
